extends layout_en.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/en') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-12.medium-9.large-9

        h1= title

        p.lead.text-light= desc

      .cell.portfolio-meta.small-12.medium-2.large-3
        h6 Technologies

        ul
          each tech in technologies
            li= tech

        a.button.expanded(href=`${live}`, target='_blank') Live Demo
        a.button.expanded(href=`${github}`, target='_blank') GitHub Repo
    
    img.image(src=`/static/${banner}`)