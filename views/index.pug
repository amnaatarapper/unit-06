extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Bonjour!
      h1 Avez-vous un projet web en tête?
      h1 Créons le ensemble... :)

      p.lead.text-light
        | Vitrine web, e-boutique, applications web/mobile...

  
  article.grid-container.portfolio-index
    h2.projects Mes créations
    hr 
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each val, index in render
        .cell
          a(href="/project/" + render[index][0])
            img.thumbnail(src="/static" + render[index][2])
            h5= render[index][1]
      
